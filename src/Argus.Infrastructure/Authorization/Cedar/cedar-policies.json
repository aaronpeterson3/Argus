{
  "entities": [
    {
      "uid": "Tenant::{tenantId}",
      "attrs": {
        "name": "",
        "type": "tenant",
        "created_at": ""
      },
      "parents": []
    },
    {
      "uid": "User::{userId}",
      "attrs": {
        "email": "",
        "roles": [],
        "type": "user"
      },
      "parents": ["Tenant::{tenantId}"]
    },
    {
      "uid": "Resource::AccountingData::{resourceId}",
      "attrs": {
        "owner": "Tenant::{tenantId}",
        "type": "accounting_data",
        "sensitivity": "high"
      },
      "parents": ["Tenant::{tenantId}"]
    }
  ],
  "policies": [
    {
      "effect": "permit",
      "principal": "User::{userId}",
      "action": "read",
      "resource": "Resource::AccountingData::{resourceId}",
      "conditions": [
        {
          "attribute": "principal.roles",
          "operator": "includes",
          "value": "reader"
        },
        {
          "attribute": "resource.owner",
          "operator": "equals",
          "value": "principal.tenant"
        }
      ]
    },
    {
      "effect": "permit",
      "principal": "User::{userId}",
      "action": ["read", "write"],
      "resource": "Resource::AccountingData::{resourceId}",
      "conditions": [
        {
          "attribute": "principal.roles",
          "operator": "includes",
          "value": "admin"
        }
      ]
    }
  ]
}