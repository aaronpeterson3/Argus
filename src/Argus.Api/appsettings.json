{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=argus;Username=argus;Password=your_password"
  },
  "Elasticsearch": {
    "Url": "http://localhost:9200",
    "IndexPrefix": "argus"
  },
  "Auth": {
    "JwtSecret": "your-32-character-secure-jwt-secret-key",
    "TokenExpirationMinutes": 60
  },
  "Orleans": {
    "ClusterId": "development",
    "ServiceId": "ArgusApp",
    "SiloPort": 11111,
    "GatewayPort": 30000,
    "PasswordHashConfig": {
      "IterationCount": 100000,
      "NumBytesRequested": 32
    }
  },
  "Email": {
    "SmtpServer": "smtp.gmail.com",
    "SmtpPort": 587,
    "SmtpUsername": "your-email@domain.com",
    "SmtpPassword": "your-smtp-password",
    "FromEmail": "no-reply@yourdomain.com",
    "FromName": "Argus System"
  },
  "ApiSecurity": {
    "MaxRequestSize": 10485760,
    "AllowedContentTypes": [
      "application/json",
      "multipart/form-data",
      "application/x-www-form-urlencoded"
    ],
    "RateLimit": {
      "Window": "00:01:00",
      "MaxRequests": 100
    }
  },
  "Cedar": {
    "PolicyPath": "Authorization/Cedar/cedar-policies.json",
    "ValidateOnStartup": true
  }
}